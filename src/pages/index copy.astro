<PageLayout meta={{ title: "DeCare Software Solutions" }}>
  <section class="h-screen relative overflow-hidden">
    <div class="w-60 relative z-10">
      <Image
        src={logoImg}
        alt="DeCare logo"
        loading="eager"
      />
    </div>
    <div class="absolute top-0 right-0 w-full h-full pointer-events-none">
      <DeCare_Landing_Floor/>
    </div>
